{
  "name": "Terraform",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:0-3.11",
  "remoteEnv": {
    "PATH": "/home/vscode/.local/bin:${containerEnv:PATH}"
  },
  "containerEnv": {
    "SHELL": "/bin/zsh",
    "AWS_DEFAULT_SSO_REGION": "ca-central-1"
  },
  "features": {
    "docker-from-docker": {
      "version": "latest",
      "moby": true
    },
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "1.1.9",
      "tflint": "latest",
      "terragrunt": "0.36.7"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "redhat.vscode-yaml",
        "sebastianbille.iam-legend",
        "GitHub.copilot",
        "oderwat.indent-rainbow",
        "timonwong.shellcheck",
        "ms-azuretools.vscode-docker",
        "ms-vsliveshare.vsliveshare"
      ],
      "settings": {
        "python.pythonPath": "/usr/local/bin/python",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.autopep8Path": "/usr/local/py-utils/bin/autopep8",
        "python.formatting.blackPath": "/home/vscode/.local/bin/black",
        "python.formatting.yapfPath": "/usr/local/py-utils/bin/yapf",
        "python.linting.banditPath": "/usr/local/py-utils/bin/bandit",
        "python.linting.flake8Path": "/home/vscode/.local/bin/flake8",
        "python.linting.mypyPath": "/usr/local/py-utils/bin/mypy",
        "python.linting.pycodestylePath": "/usr/local/py-utils/bin/pycodestyle",
        "python.linting.pydocstylePath": "/usr/local/py-utils/bin/pydocstyle",
        "python.linting.pylintPath": "/usr/local/py-utils/bin/pylint",
        "python.autoComplete.extraPaths": [
          "./images/csp_violation_report_service"
        ],
        "[python]": {
          "editor.formatOnSave": true
        },
        "[terraform]": {
          "editor.formatOnSave": true
        }
      }
    }
  },
  "remoteUser": "vscode"
}